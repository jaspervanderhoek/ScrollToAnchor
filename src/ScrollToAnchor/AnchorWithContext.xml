<?xml version="1.0" encoding="utf-8" ?>
<widget id="ScrollToAnchor.widget.AnchorWithContext" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
  <name>Anchor (With Context)</name>
  <description>This widget places an anchor on the specific page.</description>

  <icon></icon>

  <properties>
        <property key="anchorClass" type="attribute">
            <caption>Anchor class</caption>
            <category>Configuration</category>
            <description>The class of the anchor. Do not include the dot before the class name, this is handled by the widget.</description>
            <attributeTypes>
                <attributeType name="String"/>
                <attributeType name="Enum"/>
            </attributeTypes>
        </property>
	</properties>
</widget>

