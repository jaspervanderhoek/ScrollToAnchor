<?xml version="1.0" encoding="utf-8" ?>
<widget id="ScrollToRegion.widget.ScrollToRegion" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
  <name>ScrollToRegion</name>
  <description>This widget scrolls to a specific anchor on the page.</description>

  <icon></icon>

  <properties>
        <property key="scrollTo" type="attribute">
            <caption>Scroll to</caption>
            <category>Configuration</category>
            <description>The attribute where the scroll to variable is set.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="regionToScroll" type="string" required="true" defaultValue="">
            <caption>Region to scroll</caption>
            <category>Configuration</category>
            <description>The region which contains the anchor(s).</description>
        </property>
        <property key="offset" type="string" required="false" defaultValue="">
            <caption>Offset</caption>
            <category>Configuration</category>
            <description>Offset</description>
        </property>
	</properties>
</widget>

